<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{{ encore_entry_link_tags('app') }}{% endblock %}
    </head>
    <body>
        <div class="ot_main">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <a class="navbar-brand" href="{{ path('ot_home') }}">Open Tours</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Italy
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    {% for country in menu.countries %}
                                        {% if country.name == 'Italy' %}
                                            {% for category in country.categories %}
                                                <a class="dropdown-item" href="{{ path('ot_tour_index', { 'country': country.code, 'category': category.id, 'passengers':2, 'start': 0, 'qty':3 }) }}">{{ category.name }}</a>
                                            {% endfor %}
                                        {% endif %}
                                    {% endfor %}
                                </div>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('ot_about') }}">About</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('ot_contact') }}">Contact</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('ot_terms') }}">Terms & Conditions</a>
                            </li>
                        </ul>
                        <form class="form-inline my-2 my-lg-0">
                            <span><input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search"></span>
                            <span><button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button></span>
                        </form>
                    </div>
                </div>
            </nav>
            {% block body %}
            {% endblock %}

            <!-- Footer -->
            <footer class="page-footer font-small blue">
                <br />
                <!-- Copyright -->
                <div class="footer-copyright text-center py-3">Â© 2020 Copyleft:
                    <a href="https://opentour.tech/"> opentour.tech</a>
                    <br />
                    <a href="{{ path('ot_admin') }}"> Admin</a>
                </div>
                <!-- Copyright -->
            </footer>
            <!-- Footer -->
        </div>
       
        {% block javascripts %}{{ encore_entry_script_tags('app') }}{% endblock %}
    </body>
</html>
